{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "app/src",
        "esModuleInterop": true,
        "jsx": "preserve",
        "lib": [
            "esnext",
            "webworker",
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@vinyai/*": ["../../packages/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules"
    ]
}