{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./packages",
        "esModuleInterop": true,
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@totem/*": ["*/src"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}