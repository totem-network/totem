{
    "manifest_version": 2,
    "name": "Totem Browser Extension",
    "version": "0.1",
    "icons": {
        "128": "./images/logo_128x128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "./images/logo_128x128.png",
            "38": "./images/logo_128x128.png"
        },
        "default_title": "Totem"
    },
    "background": {
        "scripts": [
            "./scripts/background.js"
        ]
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "webRequest",
        "webRequestBlocking"
    ],
    "web_accessible_resources": [
        "scripts/web-accessible/message.js"
    ]
}