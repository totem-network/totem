{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@totem/*": ["../*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules"
    ]
}