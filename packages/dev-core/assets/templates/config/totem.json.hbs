{
    "name": "{{name}}",
    "version": "{{version}}",
    "api": [
        {{#each api}}
        {
            action: "{{action}}",
            params: [
                {{#each params}}
                {
                    "name": "{{name}}",
                    "type": "{{type}}"
                },
                {{/each}}
            ]
        },
        {{/each}}
    ],
    "schema": [
        {{! path to schema.json?}}
    ],
    "src": {
        {{! if submodules array with each, else string}}
    },
    "test": {
        "functional": "{{functionalTestDirectory}}",
        "integration": "{{integrationTestDirectory}}",
        "unit": "{{unitTestDirectory}}"
    },
    "dependencies": {
        {{#each dependencies}}
        "{{name}}": "{{version}}",
        {{/each}}
    }
}